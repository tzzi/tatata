<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="sub" template="/WEB-INF/views/sub-template.jsp">
		<put-attribute name="side" value="/WEB-INF/views/side.jsp"></put-attribute>
		<put-attribute name="main" value="/WEB-INF/views/main.jsp"></put-attribute>
	</definition>
	<definition name="t_nested_1" template="/WEB-INF/views/tiles-template.jsp">
		<put-attribute name="title" value="Tile-advance"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/header_1.jsp"></put-attribute>
		<put-attribute name="nav" value="/WEB-INF/views/nav.jsp"></put-attribute>
		<put-attribute name="body">
			<definition template="/WEB-INF/views/sub-template.jsp">
				<put-attribute name="side" value="/WEB-INF/views/side.jsp"></put-attribute>
				<put-attribute name="main" value="/WEB-INF/views/main.jsp"></put-attribute>
			</definition>
		</put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/banner.jsp"></put-attribute>
	</definition>
	<!-- Extending Definition -->
	<definition name="t_abstract" template="/WEB-INF/views/tiles-template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/header_1.jsp"/>
		<put-attribute name="nav" value="/WEB-INF/views/nav.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/banner.jsp"/>
	</definition>
	<definition name="t_login" extends="t_abstract">
		<put-attribute name="title" value="Tiles-extends"/>
		<put-attribute name="body" value="/WEB-INF/views/account/login.jsp"/>
	</definition>
	<!-- Extends template를 하고 난 이후, override 가 가능 -->
	<definition name="t_login_result" extends="t_abstract">
		<put-attribute name="body" value="/WEB-INF/views/account/login_result.jsp"/>
	</definition>
	
	<!-- Expression Language Support -->
	<definition name="t_board_detail" extends="t_abstract">
		<put-attribute name="title" expression="${vo.title }"/>
		<put-attribute name="body" value="/WEB-INF/views/board/detail.jsp"/>
	</definition>
</tiles-definitions>